<h1>Editing media</h1>

<% form_for(@media) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
   <p>
<%= image_tag @media.photo.url(:original) rescue nil %>
  </p>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @media %> |
<%= link_to 'Back', medias_path %>
<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  
  <p>
  <%= f.label :project_id %><br />
  <%= collection_select(:article,:project_id,Project.find(:all),:id,:name) %>
  </p>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :article %><br />
	<%= tinymce(:article, :article) %>
   
  </p>
  
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
<h1>Featured Projects</h1>

<table>
<% @articles.each do |article| %>
  <tr>
    <td>
	 <label><%= article.project.name %> | <%= article.title %></label><br> 
    </td>
  </tr><br><br>
  
  <tr>  
    <td>
	<%= link_to 'Show |', article %>
	<%= link_to 'Edit |', edit_article_path(article) %>

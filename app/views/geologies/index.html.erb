<h1>Listing geologies</h1>

<table class="list">
  <tr>
	<th></th>   
    <th>Name</th>
	

   

  </tr>

<% for geology in @geologies %>
  <tr class="<%= alternate %>">		
			<td width ="60px">
  
   
   <%= link_to (image_tag("list-icons/icon-view-off.png", :border => 0, :mouseover => "list-icons/icon-view-on.png"), :action =>'show', :id => geology.id) %>
   <%= link_to (image_tag("list-icons/icon-edit-off.png", :border => 0, :mouseover => "list-icons/icon-edit-on.png"), :action =>'edit', :id => geology.id) %>
  <%= link_to (image_tag("list-icons/icon-delete-off.png", :border => 0, :mouseover => "list-icons/icon-delete-on.png"), geology, :confirm => 'Are you sure?', :method => :delete) %>

   
   </td>	
	<td><%=h geology.name %></td>
  </tr>
<% end %>
</table>


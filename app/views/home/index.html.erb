        <div>
            <% @categories.each do |category| %>
            <li>
                <%= link_to category.name, "#", :class => "list-01", :onclick => "Effect.toggle('category_#{category.id}', 'slide'); return true;" %>
            </li>
            <% div_for(category, :class => "list-01", :style => "display:none;" ) do %>
            <div>
                <% category.projects.each do |project| %>
                <% if project.published %>
                <%= link_to project.number, project_path(project), :class => "entry" %>
                <%= link_to project.name, project_path(project), :class => "entry" %>
                <% end %>
                <% end %>
            </div>
            <% end %>
            <% end %>

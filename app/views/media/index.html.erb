<h1>Listing media</h1>

<table class='list'>
  <tr>
     <th>Image</th>
    <th>Title</th>
    <th>Description</th>
	<th></th>
	<th</th>
  </tr>

<% @media.each do |medium| %>
  <tr class="<%= alternate %>">
    
	<td><%=image_tag medium.photo.url(:small) rescue nil %></td>
	
	<td><%= link_to medium.title, medium %></td>
    <td><%=h medium.description %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New media', new_medium_path %>
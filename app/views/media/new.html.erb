<h1>New medium</h1>

<% form_for(@medium, :html => {:multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
        <h2>Project Name</h2>
        </label>
        <% for project in Project.find(:all) %>
        <div> <%= check_box_tag"medium[project_ids][]",project.id,@medium.projects.include?(project) %> <%= [project.number, "-", project.name, ] %> </div>
        <% end %>
 </p> 
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label 'Photo' %><br />
    <%= f.file_field :photo %>
  </p>
  
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', media_path %>

<h1>Editing state</h1>

<%= error_messages_for :state %>

<% form_for(@state) do |f| %>
  <p>
    <b>Symbol</b><br />
    <%= f.text_field :symbol %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

<label for="state_country">Country</label>:
<%= collection_select(:state,:country_id,@countries,:id,:name) %>    
  
  
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @state %> |
<%= link_to 'Back', states_path %>

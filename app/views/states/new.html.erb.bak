<div  class="wrapper">
<h1>New state</h1>

<%= error_messages_for :state %>

<% form_for(@state) do |f| %>
  <p>
    <b>Symbol</b><br />
    <%= f.text_field :symbol %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

<label for="project_country">Country</label>:
<%= collection_select(:state,:country_id,@countries,:id,:name) %>  
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', states_path %>
</div>
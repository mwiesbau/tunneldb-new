<h1>Listing Users</h1>
<br>

<table class= "list">
  <tr>
	<th></th>
    <th>Username</th>
    <th>E-mail</th>
	<th>Role</th>
    </tr>

<% for user in @users %>



 		 <tr class="<%= alternate %>">		
			<td width ="60px">
              <%= link_to (image_tag("list-icons/icon-edit-off.png", :border => 0, :mouseover => "list-icons/icon-edit-on.png"), :action =>'edit', :id => user.id) %>
              <%= link_to (image_tag("list-icons/icon-delete-off.png", :border => 0, :mouseover => "list-icons/icon-delete-on.png"), user, :confirm => 'Are you sure?', :method => :delete) %>
            </td>
		
            <td><%=link_to user.username, user %></td>
            <td><%=h user.email %></td>
			<td><%=h user.role %></td>
          </tr>
 
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
